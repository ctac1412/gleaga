<odoo>
  <data>

    <record model="ir.ui.view" id="partner_tree">
      <field name="name">my_docs.partner.tree</field>
      <field name="model">my_docs.partner</field>
      <field name="arch" type="xml">
        <tree>

          <field name="Title" />
          <field name="address"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="partner_form">
      <field name="name">my_docs.partner.form</field>
      <field name="model">my_docs.partner</field>
      <field name="arch" type="xml">
        <form string="Card partner">
          <sheet>
            <group>
              <field name="Title"/>

              <field name="type_of_partner"/>
              <field name="type_ip_id"/>

            </group>
            <group>
              <group>
                <field name="org_prav_forma" colspan="3"/>
                <field name="svedeniya_o_gos_reg" colspan="3"/>
                <field name="ogrn" colspan="3"/>
                <field name="vidano" colspan="3"/>
                <field name="data_vidachi" colspan="3"/>
                <field name="inn" colspan="3"/>
                <field name="okpo" colspan="3"/>
                <field name="head_role" colspan="3"/>
              </group>
              <group>
                <field name="phone" colspan="3"/>
                <field name="email" colspan="3"/>
                <field name="faxnum" colspan="3"/>
                <field name="fio_head" colspan="3"/>
                <field name="fio_head_rod_pad" colspan="3"/>
                <field name="fio_head_dat_pad" colspan="3"/>
                <field name="head_doc" colspan="3"/>
                <field name="head_role_rod_pad" colspan="3"/>
              </group>
              <group col="4" colspan="4" string="Юридический адрес">
                <label for="address" colspan="4"/>
                <field name="address" nolabel="1" colspan="4"/>
                <label for="country_id" colspan="4"/>
                <field name="country_id" nolabel="1" colspan="4"/>
                <label for="region_id" colspan="4"/>
                <field name="region_id" nolabel="1" colspan="4"/>
              </group>
              <group col="4" colspan="4" string="Фактический адрес">
                <label for="address_real" colspan="4"/>
                <field name="address_real" nolabel="1" colspan="4"/>
                <label for="country_real_id" colspan="4"/>
                <field name="country_real_id" nolabel="1" colspan="4"/>
                <label for="region_real_id" colspan="4"/>
                <field name="region_real_id" nolabel="1" colspan="4"/>
                <label for="address_is_same" colspan="4"/>
                <field name="address_is_same" nolabel="1" colspan="4"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="partner_local_form">
      <field name="name">my_docs.partner_local.form</field>
      <field name="model">my_docs.partner_local</field>
      <field name="arch" type="xml">
        <form string="Card partner">
          <sheet>
              <group >
            <group string= "Даннные контрагента">
              <field name="Title"/>
              <field name="type_of_partner"/>
              <field name="type_ip_id"/>
            </group>
            <group string= "Копирование из базового справочника">
              <field name="partner_id"/>
            </group>
              </group>
            <group>
                <separator string="Юридический адрес"/>
                <label for="address" />
                <field name="address" nolabel="1" />
                <label for="country_id" />
                <field name="country_id" nolabel="1"/>
                <label for="region_id"/>
                <field name="region_id" nolabel="1"/>
                <label for="index"/>
                <field name="index" nolabel="1"/>

                <separator string="Фактический адрес"/>
                <label for="address_is_same"/>
                <field name="address_is_same" nolabel="1" />
                <label for="address_real" />
                <field name="address_real" nolabel="1" />
                <label for="country_real_id"/>
                <field name="country_real_id" nolabel="1" />
                <label for="region_real_id" />
                <field name="region_real_id" nolabel="1" />
                <label for="index_real"/>
                <field name="index_real" nolabel="1"/>

              <group>
                <field name="org_prav_forma" colspan="3"/>
                <field name="svedeniya_o_gos_reg" colspan="3"/>
                <field name="ogrn" colspan="3"/>
                <field name="vidano" colspan="3"/>
                <field name="data_vidachi" colspan="3"/>
                <field name="inn" colspan="3"/>
                <field name="okpo" colspan="3"/>
                <field name="head_role" colspan="3"/>
              </group>
              <group>
                <field name="phone" colspan="3"/>
                <field name="email" colspan="3"/>
                <field name="faxnum" colspan="3"/>
                <field name="fio_head" colspan="3"/>
                <field name="fio_head_rod_pad" colspan="3"/>
                <field name="fio_head_dat_pad" colspan="3"/>
                <field name="head_doc" colspan="3"/>
                <field name="head_role_rod_pad" colspan="3"/>
              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="my_docs.show_partner">
      <field name="name">partner</field>
      <field name="res_model">my_docs.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="partner_tree"></field>
    </record>

    <record model="ir.actions.act_window" id="my_docs.show_partner_local">
      <field name="name">partner_local</field>
      <field name="res_model">my_docs.partner_local</field>
      <field name="view_mode">tree,form</field>
    </record>



  </data>
</odoo>
