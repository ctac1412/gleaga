<odoo>
  <data>
    <record id="my_docs.new_task_wizard" model="ir.ui.view">
      <field name="name">new_task</field>
      <field name="model">my_docs.new_task</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Personal Information">
            <group>
              <field name="type_task"/>

            </group>

          <footer>
            <button name="next" string="next" type="object" class="oe_highlight"/>

            <button special="cancel" string="Cancel" class="oe_link" default_focus="1"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="my_docs.show_new_task" model="ir.actions.act_window">
      <field name="name">new_task Wizard</field>
      <field name="res_model">my_docs.new_task</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>


      <act_window id="task_wizard_action" name="Set expert for many" res_model="my_docs.set_expert_wizard"
     src_model="my_docs.task" view_mode="form" target="new"/>

     <record model="ir.ui.view" id="task_tree">
       <field name="name">my_docs.task.tree</field>
       <field name="model">my_docs.task</field>
       <field name="arch" type="xml">
         <tree >

           <field name="state"/>
           <field name="expert_id"/>
           <field name="reglament_ids"/>

         </tree>
       </field>
     </record>

  </data>
</odoo>
