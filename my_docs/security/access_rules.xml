<odoo>
  <data>

    <record model="ir.rule" id="task_employ_rule">
      <field name="name">All task for employ </field>
      <field name="model_id" ref="model_my_docs_task" />
      <field name="domain_force">['|',('create_uid','=', user.id),('expert_id','in',[user.id])]</field>
      <field name="groups" eval="[(4, ref('group_user_employ') )]" />
    </record>

    <record model="ir.rule" id="task_manager_rule">
      <field name="name">All task for super_manager </field>
      <field name="model_id" ref="model_my_docs_task" />
      <field name="domain_force">['|',('getter_company_id','in', user.company_ids.ids),('sender_company_id','in', user.company_ids.ids)]</field>
      <field name="groups" eval="[(4, ref('group_user_manager') )]" />
    </record>

