<odoo>
  <data>

    <record model="ir.ui.view" id="reglament_tree">
      <field name="name">tech_directory.reglament.tree</field>
      <field name="model">tech_directory.reglament</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="number"/>
          <field name="status"/>
          <field name="group_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="reglament_form">
      <field name="name">tech_directory.reglament.form</field>
      <field name="model">tech_directory.reglament</field>
      <field name="arch" type="xml">
        <form string="Card reglament">
          <sheet>
            <group>
              <field name="name"/>
              <field name="number"/>
              <field name="status"/>
              <field name="group_id"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>

  <record model="ir.actions.act_window" id="tech_directory.show_reglament">
      <field name="name">reglament</field>
      <field name="res_model">tech_directory.reglament</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="reglament_tree"></field>
      <field name="res_id" ref="reglament_form"></field>
    </record>

    <menuitem name="Справочник" id="tech_directory.menu_root"/>
    <menuitem name="reglament" id="tech_directory.menu_1" parent="tech_directory.menu_root"
              action="tech_directory.show_reglament"/>

  </data>
</odoo>
